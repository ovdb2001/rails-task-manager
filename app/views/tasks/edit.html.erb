<div class="container">
  <h1>Edit <%= @task.title %></h1>

  <%= form_for(@task) do |f| %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= f.label :details %>
      <%= f.text_field :details, class: 'form-control' %>
    </div>

    <div class="field">
        <%= f.label "Completed" %>
        <%= f.check_box :completed %> <br />
    </div>

    <%= f.submit class: 'button' %>
  <% end %>

    <button class="back_to_list"> <%= link_to 'back to list', tasks_path %></button>

</div>
